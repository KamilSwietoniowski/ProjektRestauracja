@model IEnumerable<ProjektRestauracja.Models.Pracownicy>

@{
    ViewBag.Title = "Restauracja Projekt";
}

<h2>Index</h2>
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">
        <strong>Informacja: </strong> @TempData["InfoMessage"]
        <button type="button" class=" close" data-dismiss="alert" aria-label="Close"><span>&times;</span></button>
    </div>

}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Operacja zakończona: </strong> @TempData["SuccessMessage"]
        <button type="button" class=" close" data-dismiss="alert" aria-label="Close"><span>&times;</span></button>
    </div>

}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Wystąpił błąd: </strong> @TempData["ErrorMessage"]
        <button type="button" class=" close" data-dismiss="alert" aria-label="Close"><span>&times;</span></button>
    </div>

}



<p>
    @Html.ActionLink("Dodaj Nowego Pracownika", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Pracownika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imię)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stanowisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_Zatrudnienia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pensja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Płeć)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Pracownika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imię)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stanowisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_Zatrudnienia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pensja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Płeć)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.ID_Pracownika }, new { @class = "btn btn-primary" }) &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("Usuń", "Delete", new { id = item.ID_Pracownika }, new { @class = "btn btn-danger" })&nbsp;&nbsp;&nbsp;
            </td>
        </tr>
    }

</table>
